{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "outDir": "./bin",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "./node_modules/*"
    ]
}